<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentacion.ui.panelAdministrador.ausencias.AusenciasFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spMotivoAusencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/ausencias"
            android:fontFamily="@font/arial"
            android:minHeight="24dp"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/common_padding_max"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilFechaInicio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_padding_default"
            android:layout_marginEnd="@dimen/common_padding_min"
            android:hint="@string/fecha_inicio"
            android:textColorHint="@color/verde_inputs"
            app:helperText="@string/help_required"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:startIconDrawable="@drawable/ic_date_range"
            app:layout_constraintBottom_toBottomOf="@id/tilFechaFin"
            app:layout_constraintEnd_toStartOf="@+id/tilFechaFin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tilFechaFin">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFechaInicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:fontFamily="@font/arial" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilFechaFin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/common_padding_default"
            android:layout_marginStart="@dimen/common_padding_min"
            android:hint="@string/fecha_fin"
            android:textColorHint="@color/verde_inputs"
            android:layout_marginTop="@dimen/common_padding_default"
            app:helperText="@string/help_required"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:startIconDrawable="@drawable/ic_date_range"
            android:layout_marginVertical="@dimen/common_padding_max"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tilFechaInicio"
            app:layout_constraintTop_toBottomOf="@+id/spMotivoAusencia">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFechaFin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:fontFamily="@font/arial" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/verde_inputs"
            android:layout_marginHorizontal="@dimen/common_padding_default"
            android:hint="@string/escribe_aqu"
            android:layout_marginVertical="@dimen/common_padding_max"
            app:helperText="@string/help_required"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:startIconDrawable="@drawable/ic_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tilFechaFin">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arial"
                android:inputType="textMultiLine" />
        </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btAdjuntarDoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/verde_botones"
        android:fontFamily="@font/arial"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/adjuntar"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:cornerRadius='30sp'
        android:layout_marginVertical="@dimen/common_padding_max"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tilDescripcion" />

    <TextView
        android:id="@+id/tvEstadoDoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mont_heavy"
        android:textAlignment="center"
        android:textColor="@color/verde_andarivel"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:layout_marginVertical="@dimen/common_padding_max"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btAdjuntarDoc"
        tools:text="@string/imagen_lista_para_subir"
        tools:visibility="visible"
        android:drawablePadding="12dp"
        app:drawableStartCompat="@drawable/ic_check" />

    <Button
        android:id="@+id/btSolicitar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/verde_botones"
        android:fontFamily="@font/arial"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/solicitar"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:cornerRadius='30sp'
        android:layout_marginVertical="@dimen/common_padding_max"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEstadoDoc" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>