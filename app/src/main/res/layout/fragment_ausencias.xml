<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.panelAdministrador.ausencias.AusenciasFragment">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/solicitar_ausencia"
        android:textAlignment="center"
        android:textSize="35sp"
        android:layout_marginTop="30dp"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintBottom_toTopOf="spMotivoAusencia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Spinner
        android:id="@+id/spMotivoAusencia"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:entries="@array/ausencias"
        android:minHeight="30dp"
        android:textAlignment="center"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintBottom_toTopOf="tiDescripcion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="tvTitulo"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tiDescripcion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textAlignment="center"
        android:textColorHint="#01579B"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="50dp"
        android:hint="@string/descripci_n"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:startIconDrawable="@drawable/ic_email"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintBottom_toTopOf="@+id/btSolicitar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spMotivoAusencia">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColorHint="#757575" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btSolicitar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#000000"
        android:padding="20dp"
        android:gravity="center"
        android:layout_marginHorizontal="120dp"
        app:cornerRadius='30sp'
        android:text="@string/solicitar"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tiDescripcion" />

</androidx.constraintlayout.widget.ConstraintLayout>