<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentacion.ui.panelAdministrador.perfil.EditarPerfilFragment">


    <LinearLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/texoEditarPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/actualizar_datos"
            android:textAlignment="center"
            android:textColor="@color/verde_andarivel"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/mont_heavy"
            android:layout_marginVertical="32dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tiNombreReal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColorHint="@color/verde_inputs"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:hint="@string/nombre"
            android:layout_marginVertical="@dimen/common_padding_default"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:startIconDrawable="@drawable/ic_baseline_account_box_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNombreReal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arial"
                android:inputType="textPersonName|textCapWords" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tiApellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColorHint="@color/verde_inputs"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:hint="@string/apellidos"
            android:layout_marginVertical="@dimen/common_padding_default"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:startIconDrawable="@drawable/ic_baseline_account_box_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etApellidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arial"
                android:inputType="textPersonName|textCapWords" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tiDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColorHint="@color/verde_inputs"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:hint="@string/direcci_n"
            android:layout_marginVertical="@dimen/common_padding_default"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:startIconDrawable="@drawable/ic_baseline_home_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arial"
                android:inputType="textPersonName|textCapWords"
                android:imeOptions="actionNext"
                android:nextFocusForward="@id/etTelefono" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tiTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColorHint="@color/verde_inputs"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:hint="@string/tel_fono"
            android:layout_marginVertical="@dimen/common_padding_default"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:startIconDrawable="@drawable/ic_baseline_phone_enabled_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arial"
                android:inputType="phone" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btAceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aceptar"
            android:backgroundTint="@color/verde_botones"
            android:padding="20dp"
            android:fontFamily="@font/arial"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/common_padding_default"
            app:cornerRadius='30sp' />

    </LinearLayout>
</ScrollView>