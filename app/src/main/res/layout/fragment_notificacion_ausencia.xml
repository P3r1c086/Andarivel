<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewAusencia"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#3EFFFFFF"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp"
    app:cardMaxElevation="1dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/color_de_fondo_principal">

        <TextView
            android:id="@+id/tvMotivoAusencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/arial"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="@string/motivo_ausencia"
            android:layout_marginEnd="120dp"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tvMotivoAusenciaDato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/tvMotivoAusencia"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tvFechaInicioAusencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/verde_andarivel"
            android:fontFamily="@font/arial"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMotivoAusencia"/>
        <TextView
            android:id="@+id/tvFechaguion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/arial"
            android:textStyle="bold"
            android:text=" / "
            app:layout_constraintStart_toEndOf="@+id/tvFechaInicioAusencia"
            app:layout_constraintTop_toBottomOf="@+id/tvMotivoAusencia"/>
        <TextView
            android:id="@+id/tvFechaFinAusencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#C62020"
            android:textSize="20sp"
            android:fontFamily="@font/arial"
            app:layout_constraintStart_toEndOf="@+id/tvFechaguion"
            app:layout_constraintTop_toBottomOf="@+id/tvMotivoAusencia"/>
        <TextView
            android:id="@+id/tvDescripcionAusencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="@string/descripcion"
            android:layout_marginEnd="160dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFechaInicioAusencia"/>
        <TextView
            android:id="@+id/tvDescripcionAusenciaDato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/tvDescripcionAusencia"
            app:layout_constraintTop_toBottomOf="@+id/tvFechaInicioAusencia"/>
       <TextView
           android:id="@+id/tvEstado"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="22sp"
           android:textColor="@color/black"
           android:textStyle="bold"
           tools:text = "Estado: "
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/tvDescripcionAusenciaDato"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>