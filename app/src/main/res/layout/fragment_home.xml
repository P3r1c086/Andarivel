<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".ui.panelAdministrador.home.HomeFragment">

        <ImageView
            android:id="@+id/imgHombreTrabajando"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            app:layout_constraintHeight_percent="0.3"
            android:contentDescription="@string/foto_de_usuario"
            android:src="@drawable/hombretrabajando"
            app:layout_constraintBottom_toTopOf="@+id/btFichar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Button
            android:id="@+id/btFichar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:padding="18dp"
            android:text="@string/fichar"
            app:cornerRadius='30sp'
            app:layout_constraintBottom_toTopOf="@id/btFinalJornada"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgHombreTrabajando">

        </Button>
        <TextView
            android:id="@+id/fechaFichado"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:text="Calendario"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintBottom_toTopOf="@id/btFichar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgHombreTrabajando">

        </TextView>

        <Button
            android:id="@+id/btFinalJornada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:padding="18dp"
            android:text="@string/salir_de_jornada"
            app:cornerRadius='30sp'
            android:visibility="invisible"
            tools:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btFichar">

        </Button>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@android:drawable/ic_dialog_email"
            tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>