<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentacion.ui.panelAdministrador.ajustes.AjustesFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tema_oscuro"
        android:fontFamily="@font/arial"
        android:textStyle="bold"
        android:textSize="16sp"
        android:gravity="center"
        android:drawableStart="@drawable/ic_light_mode"
        android:layout_marginStart="@dimen/common_padding_default"
        android:layout_marginVertical="@dimen/common_padding_max"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchTema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/common_padding_max"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTema"
        app:layout_constraintBottom_toBottomOf="@id/tvTema" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arial"
        android:text="@string/cerrar_sesi_n"
        android:textStyle="bold"
        android:textSize="16sp"
        android:gravity="center"
        android:drawableStart="@drawable/ic_logout"
        android:layout_marginStart="@dimen/common_padding_default"
        android:layout_marginVertical="@dimen/common_padding_max"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTema" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvBorrarPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/borrar"
        android:fontFamily="@font/arial"
        android:textStyle="bold"
        android:textSize="16sp"
        android:gravity="center"
        android:drawableStart="@drawable/ic_delete"
        android:layout_marginStart="@dimen/common_padding_default"
        android:layout_marginVertical="@dimen/common_padding_max"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLogout" />

</androidx.constraintlayout.widget.ConstraintLayout>