<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation_nested"
    app:startDestination="@id/home_dest">
    <fragment
        android:id="@+id/gallery_dest"
        android:name="com.pedroaguilar.andarivel.ui.panelAdministrador.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim"
        tools:layout="@layout/fragment_gallery" />
    <fragment
        android:id="@+id/home_dest"
        android:name="com.pedroaguilar.andarivel.ui.panelAdministrador.home.HomeFragment"
        android:label="@string/menu_home"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/slideshow_dest"
        android:name="com.pedroaguilar.andarivel.ui.panelAdministrador.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim"
        tools:layout="@layout/fragment_slideshow" >
        <action
            android:id="@+id/action_slideshow_dest_to_editarPerfil_fragment"
            app:destination="@id/editarPerfil_fragment" />
    </fragment>
    <activity
        android:id="@+id/panelAdministradorActivity"
        android:name="com.pedroaguilar.andarivel.ui.panelAdministrador.PanelAdministradorActivity"
        android:label="PanelAdministradorActivity"
        tools:layout="@layout/activity_panel_administrador"/>
    <fragment
        android:id="@+id/ausencias_dest"
        android:name="com.pedroaguilar.andarivel.ui.panelAdministrador.ausencias.AusenciasFragment"
        android:label="fragment_ausencias"
        tools:layout="@layout/fragment_ausencias" />
    <fragment
        android:id="@+id/informes_dest"
        android:name="com.pedroaguilar.andarivel.ui.panelAdministrador.informes.InformesFragment"
        android:label="fragment_informes"
        tools:layout="@layout/fragment_informes" />
    <fragment
        android:id="@+id/editarPerfil_fragment"
        android:name="com.pedroaguilar.andarivel.ui.panelAdministrador.slideshow.EditarPerfilFragment"
        android:label="fragment_editar_perfil"
        tools:layout="@layout/fragment_editar_perfil" >
        <action
            android:id="@+id/action_editarPerfil_fragment_to_slideshow_dest"
            app:destination="@id/slideshow_dest" />
    </fragment>
</navigation>